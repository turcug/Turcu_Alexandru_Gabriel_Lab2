@page
@model Turcu_Alexandru_Gabriel_Lab2.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author's ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.AuthorID)
        </dd>
        <dt class="col-sm-2">
            Author's Full Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FullName)
        </dd>

        <dt class="col-sm-2">
            Books's Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class="col-sm-2">
            Publishing Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublishingDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
